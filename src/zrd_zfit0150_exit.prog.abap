REPORT ZRD_ZFIT0150_EXIT.

FORM F_EXIT_ZFIT0150_0001 CHANGING P_REGISTRO_MANTER TYPE ANY.

  DATA: WL_ZFIT0150 TYPE ZFIT0150.

  CLEAR: WL_ZFIT0150.

  WL_ZFIT0150-DT_REGISTRO = SY-DATUM.
  WL_ZFIT0150-HR_REGISTRO = SY-UZEIT.
  WL_ZFIT0150-US_REGISTRO = SY-UNAME.

  MOVE-CORRESPONDING WL_ZFIT0150 TO P_REGISTRO_MANTER.

ENDFORM.

FORM F_EXIT_ZFIT0150_0002 USING P_REGISTRO_MANTER TYPE ANY
                       CHANGING P_ERROR.

  DATA: WL_ZFIT0150 TYPE ZFIT0150.

  CLEAR: WL_ZFIT0150.

  MOVE-CORRESPONDING P_REGISTRO_MANTER TO WL_ZFIT0150.

  CLEAR: P_ERROR.

  IF WL_ZFIT0150-CLASS_AVAL IS INITIAL.
    P_ERROR = ABAP_TRUE.
    MESSAGE 'Classe Avaliação é um campo obrigatório!' TYPE 'S'.
    EXIT.
  ENDIF.

  IF WL_ZFIT0150-AREA_AVAL IS INITIAL.
    P_ERROR = ABAP_TRUE.
    MESSAGE 'Área Avaliação é um campo obrigatório!' TYPE 'S'.
    EXIT.
  ENDIF.

  IF WL_ZFIT0150-LGORT IS INITIAL.
    P_ERROR = ABAP_TRUE.
    MESSAGE 'Depósito é um campo obrigatório!' TYPE 'S'.
    EXIT.
  ENDIF.

ENDFORM.

FORM F_EXIT_ZFIT0150_0003 CHANGING P_REGISTRO_MANTER TYPE ANY.

  DATA: WL_ZFIT0150 TYPE ZFIT0150.

  CLEAR: WL_ZFIT0150.

  MOVE-CORRESPONDING P_REGISTRO_MANTER TO WL_ZFIT0150.

  WL_ZFIT0150-DT_REGISTRO = SY-DATUM.
  WL_ZFIT0150-HR_REGISTRO = SY-UZEIT.
  WL_ZFIT0150-US_REGISTRO = SY-UNAME.

  MOVE-CORRESPONDING WL_ZFIT0150 TO P_REGISTRO_MANTER.

ENDFORM.

FORM F_EXIT_ZFIT0150_0004 CHANGING P_SAIDA TYPE ANY.

  DATA: WL_ZFIT0150_OUT TYPE ZFIT0150_OUT.

  CLEAR: WL_ZFIT0150_OUT.

  MOVE-CORRESPONDING P_SAIDA TO WL_ZFIT0150_OUT.

  "WL_ZFIT0150_OUT-BUTXT = ''.

  MOVE-CORRESPONDING WL_ZFIT0150_OUT TO P_SAIDA.

ENDFORM.
