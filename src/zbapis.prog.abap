DATA: EXTERNALNUMBER LIKE BAPI2080_NOTHDRE-NOTIF_NO,
      NOTIFTYPE LIKE BAPI2080-NOTIF_TYPE,
      NOTIFHEADER LIKE BAPI2080_NOTHDRI,
      TASKDETERMINATION LIKE BAPIFLAG,
      SENDER LIKE BAPI_SENDER,
      ORDERID LIKE BAPI2080_NOTHDRE-ORDERID,
      NOTIFHEADEREXPORT LIKE BAPI2080_NOTHDRE,
      NOTITEM LIKE BAPI2080_NOTITEMI OCCURS 0,
      NOTIFCAUS LIKE BAPI2080_NOTCAUSI OCCURS 0,
      NOTIFACTV LIKE BAPI2080_NOTACTVI OCCURS 0,
      NOTIFTASK LIKE BAPI2080_NOTTASKI OCCURS 0,
      NOTIFPARTNR LIKE BAPI2080_NOTPARTNRI OCCURS 0,
      LONGTEXTS LIKE BAPI2080_NOTFULLTXTI OCCURS 0,
      KEYRELATIONSHIPS LIKE BAPI2080_NOTKEYE OCCURS 0,
      RETURN LIKE BAPIRET2 OCCURS 0.

CALL FUNCTION 'BAPI_ALM_NOTIF_CREATE'
  EXPORTING
   EXTERNAL_NUMBER          = EXTERNALNUMBER
    NOTIF_TYPE              = NOTIFTYPE
    NOTIFHEADER             = NOTIFHEADER
   TASK_DETERMINATION       = TASKDETERMINATION
   SENDER                   = SENDER
   ORDERID                  = ORDERID
 IMPORTING
   NOTIFHEADER_EXPORT       = NOTFHEADER_EXPORT
 TABLES
   NOTITEM                  = NOTITEM
   NOTIFCAUS                = NOTIFCAUS
   NOTIFACTV                = NOTIFACTV
   NOTIFTASK                = NOTIFTASK
   NOTIFPARTNR              = NOTIFPARTNR
   LONGTEXTS                = LONGTEXTS
   KEY_RELATIONSHIPS        = KEY_RELATIONSHIPS
   RETURN                   = RETURN.
