REPORT ZRD_ZMMT0104_EXIT.


FORM F_EXIT_ZMMT0104_0001 CHANGING P_REGISTRO_MANTER TYPE ANY.

  DATA: WL_ZMMT0104 TYPE ZMMT0104.

  CLEAR: WL_ZMMT0104.

  WL_ZMMT0104-DATA = SY-DATUM.
  WL_ZMMT0104-HORA = SY-UZEIT.
  WL_ZMMT0104-USUARIO = SY-UNAME.

  MOVE-CORRESPONDING WL_ZMMT0104 TO P_REGISTRO_MANTER.


ENDFORM.

FORM F_EXIT_ZMMT0104_0002 USING P_REGISTRO_MANTER TYPE ANY
                       CHANGING P_ERROR.

  DATA: WL_ZMMT0104 TYPE ZMMT0104.

  CLEAR: WL_ZMMT0104.

  MOVE-CORRESPONDING P_REGISTRO_MANTER TO WL_ZMMT0104.

  CLEAR: P_ERROR.

  IF WL_ZMMT0104-ID_LMS IS INITIAL.
    P_ERROR = ABAP_TRUE.
    MESSAGE 'Informar o ID do curso!' TYPE 'S'.
    EXIT.
  ENDIF.

  IF WL_ZMMT0104-NOME_CURSO IS INITIAL.
    P_ERROR = ABAP_TRUE.
    MESSAGE 'Informar o nome do curso!' TYPE 'S'.
    EXIT.
  ENDIF.

  "


ENDFORM.

FORM F_EXIT_ZMMT0104_0003 CHANGING P_REGISTRO_MANTER TYPE ANY.

  DATA: WL_ZMMT0104 TYPE ZMMT0104.

  CLEAR: WL_ZMMT0104.

  MOVE-CORRESPONDING P_REGISTRO_MANTER TO WL_ZMMT0104.

  WL_ZMMT0104-DATA = SY-DATUM.
  WL_ZMMT0104-HORA = SY-UZEIT.
  WL_ZMMT0104-USUARIO = SY-UNAME.

  MOVE-CORRESPONDING WL_ZMMT0104 TO P_REGISTRO_MANTER.

ENDFORM.
