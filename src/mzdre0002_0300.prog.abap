FORM BUSCA_VALOR_MES  USING    P_SALDO TYPE ZDE_FI_GL_SALDO_FAGLFLEXT
                               P_MONAT TYPE MONAT
                      CHANGING P_VALOR TYPE VLCUR12.

  CASE P_MONAT.
    WHEN 01.
      P_VALOR = P_SALDO-SL01.
    WHEN 02.
      P_VALOR = P_SALDO-SL02.
    WHEN 03.
      P_VALOR = P_SALDO-SL03.
