

REFRESH: TG_MARA, TG_MAKT.

IF TG_ITENS[] IS NOT INITIAL.
  SELECT *
    FROM MARA
    INTO TABLE TG_MARA
     FOR ALL ENTRIES IN TG_ITENS
     WHERE MATNR EQ TG_ITENS-MATNR.

  SELECT *
    FROM MAKT
    INTO TABLE TG_MAKT
     FOR ALL ENTRIES IN TG_ITENS
     WHERE MATNR EQ TG_ITENS-MATNR.

    SORT: TG_MARA BY MATNR,
          TG_MAKT BY MATNR.
ENDIF.
















