*&---------------------------------------------------------------------*
*&      Form  DATA_CHANGED
*&---------------------------------------------------------------------*
*       text
*----------------------------------------------------------------------*
*      -->P_ER_DATA_CHANGED  text
*----------------------------------------------------------------------*
FORM DATA_CHANGED USING  RR_DATA_CHANGED TYPE REF TO CL_ALV_CHANGED_DATA_PROTOCOL.

  DATA: LC_QT_CHEGADA	     TYPE ZDE_QT_CHEGADA,
        LC_DT_CHEGADA	     TYPE ZDE_DT_CHEGADA,
        LC_ID_AGPESO       TYPE LIFNR,
        OBJETO             TYPE REF TO ZCL_FERROVIARIO_CHEGADA,
        GS_ALV_REFRES_COND TYPE LVC_S_STBL.

  GS_ALV_REFRES_COND-ROW = ABAP_TRUE.
  GS_ALV_REFRES_COND-COL = ABAP_TRUE.

  LOOP AT RR_DATA_CHANGED->MT_GOOD_CELLS INTO DATA(LS_MOD_CELLS).

    READ TABLE IT_RETORNO_EDT    ASSIGNING FIELD-SYMBOL(<FS_RETORNO>) INDEX LS_MOD_CELLS-ROW_ID.
    READ TABLE PLANILHA->POSICAO WITH KEY DCL       = <FS_RETORNO>-DCL
                                          SERIEDCL  = <FS_RETORNO>-SERIEDCL
                                          IDVAGAO   = <FS_RETORNO>-IDVAGAO
                                          CNPJFERRO = <FS_RETORNO>-CNPJFERRO TRANSPORTING NO FIELDS.
    READ TABLE PLANILHA->OBJETOS INDEX SY-TABIX INTO OBJETO.
    "PESO_CHEGADA
    "DT_CHEGADA
    CASE LS_MOD_CELLS-FIELDNAME.
      WHEN 'PESO_CHEGADA'.

        CALL METHOD RR_DATA_CHANGED->GET_CELL_VALUE
          EXPORTING
            I_ROW_ID    = LS_MOD_CELLS-ROW_ID
            I_FIELDNAME = LS_MOD_CELLS-FIELDNAME
          IMPORTING
            E_VALUE     = LC_QT_CHEGADA.

        IF LC_QT_CHEGADA LT 0.
          CALL METHOD RR_DATA_CHANGED->ADD_PROTOCOL_ENTRY
            EXPORTING
              I_MSGID     = 'ZLES'
              I_MSGNO     = 124
              I_MSGTY     = 'E'
              I_FIELDNAME = LS_MOD_CELLS-FIELDNAME
              I_ROW_ID    = LS_MOD_CELLS-ROW_ID.
        ELSE.
          TRY .
              OBJETO->SET_QT_CHEGADA(
                EXPORTING
                  I_BUKRS         =  <FS_RETORNO>-BUKRS
                  I_BRANCH        =  <FS_RETORNO>-BRANCH
                  I_NR_NF_PROPRIA =  <FS_RETORNO>-NR_NF_PROPRIA
                  I_SERIE_PROPRIA =  <FS_RETORNO>-SERIE_PROPRIA
                  I_QT_CHEGADA    =  LC_QT_CHEGADA ).

              <FS_RETORNO>-PESO_CHEGADA = LC_QT_CHEGADA.
              <FS_RETORNO>-QT_CHEGADA   = 0.
              <FS_RETORNO>-LINE_COLOR   = CS_LINE_COLOR_ALTERADO.

              "Totalizar
              LOOP AT IT_RETORNO_EDT INTO DATA(WA_RETORNO_EDT)
                WHERE DCL       EQ <FS_RETORNO>-DCL
                  AND SERIEDCL  EQ <FS_RETORNO>-SERIEDCL
                  AND IDVAGAO   EQ <FS_RETORNO>-IDVAGAO
                  AND CNPJFERRO EQ <FS_RETORNO>-CNPJFERRO.
                ADD WA_RETORNO_EDT-PESO_CHEGADA TO <FS_RETORNO>-QT_CHEGADA.
              ENDLOOP.

              "Registrar Total Vagão em Todos os Registros
              LOOP AT IT_RETORNO_EDT ASSIGNING FIELD-SYMBOL(<FS_RETORNO_EDT>)
                WHERE DCL       EQ <FS_RETORNO>-DCL
                  AND SERIEDCL  EQ <FS_RETORNO>-SERIEDCL
                  AND IDVAGAO   EQ <FS_RETORNO>-IDVAGAO
                  AND CNPJFERRO EQ <FS_RETORNO>-CNPJFERRO.
                <FS_RETORNO_EDT>-QT_CHEGADA = <FS_RETORNO>-QT_CHEGADA.
              ENDLOOP.

              CALL METHOD CTL_ALV->REFRESH_TABLE_DISPLAY
                EXPORTING
                  IS_STABLE      = GS_ALV_REFRES_COND
                  I_SOFT_REFRESH = ABAP_TRUE.

              CALL METHOD CL_GUI_CFW=>FLUSH.
            CATCH ZCX_FERROVIARIO_CHEGADA INTO DATA(CX_FERROVIARIO_CHEGADA).
              CALL METHOD RR_DATA_CHANGED->ADD_PROTOCOL_ENTRY
                EXPORTING
                  I_MSGID     = CX_FERROVIARIO_CHEGADA->MSGID
                  I_MSGNO     = CX_FERROVIARIO_CHEGADA->MSGNO
                  I_MSGTY     = CX_FERROVIARIO_CHEGADA->MSGTY
                  I_MSGV1     = CX_FERROVIARIO_CHEGADA->MSGV1
                  I_MSGV2     = CX_FERROVIARIO_CHEGADA->MSGV2
                  I_MSGV3     = CX_FERROVIARIO_CHEGADA->MSGV3
                  I_MSGV4     = CX_FERROVIARIO_CHEGADA->MSGV4
                  I_FIELDNAME = LS_MOD_CELLS-FIELDNAME
                  I_ROW_ID    = LS_MOD_CELLS-ROW_ID.
          ENDTRY.

        ENDIF.

      WHEN 'ID_AGPESO'.

        CALL METHOD RR_DATA_CHANGED->GET_CELL_VALUE
          EXPORTING
            I_ROW_ID    = LS_MOD_CELLS-ROW_ID
            I_FIELDNAME = LS_MOD_CELLS-FIELDNAME
          IMPORTING
            E_VALUE     = LC_ID_AGPESO.

        TRY.
            DATA(R_LFA1) = OBJETO->SET_ID_AGPESO( I_ID_AGPESO = LC_ID_AGPESO ).

            LOOP AT IT_RETORNO_EDT ASSIGNING <FS_RETORNO_EDT>
              WHERE DCL       EQ <FS_RETORNO>-DCL
                AND SERIEDCL  EQ <FS_RETORNO>-SERIEDCL
                AND IDVAGAO   EQ <FS_RETORNO>-IDVAGAO
                AND CNPJFERRO EQ <FS_RETORNO>-CNPJFERRO.
              IF R_LFA1 IS NOT INITIAL.
                <FS_RETORNO_EDT>-CNPJ_AGPESO = R_LFA1-STCD1.
                <FS_RETORNO_EDT>-DS_AGPESO   = R_LFA1-NAME1.
                <FS_RETORNO_EDT>-ID_AGPESO   = R_LFA1-LIFNR.
                <FS_RETORNO_EDT>-LINE_COLOR   = CS_LINE_COLOR_ALTERADO.
              ELSE.
                CLEAR:
                <FS_RETORNO_EDT>-CNPJ_AGPESO,
                <FS_RETORNO_EDT>-DS_AGPESO,
                <FS_RETORNO_EDT>-ID_AGPESO.
                <FS_RETORNO_EDT>-LINE_COLOR   = CS_LINE_COLOR_ALTERADO.
              ENDIF.
            ENDLOOP.

            CALL METHOD CTL_ALV->REFRESH_TABLE_DISPLAY
              EXPORTING
                IS_STABLE      = GS_ALV_REFRES_COND
                I_SOFT_REFRESH = ABAP_TRUE.

            CALL METHOD CL_GUI_CFW=>FLUSH.

          CATCH ZCX_FERROVIARIO_CHEGADA INTO CX_FERROVIARIO_CHEGADA.
            CALL METHOD RR_DATA_CHANGED->ADD_PROTOCOL_ENTRY
              EXPORTING
                I_MSGID     = CX_FERROVIARIO_CHEGADA->MSGID
                I_MSGNO     = CX_FERROVIARIO_CHEGADA->MSGNO
                I_MSGTY     = CX_FERROVIARIO_CHEGADA->MSGTY
                I_MSGV1     = CX_FERROVIARIO_CHEGADA->MSGV1
                I_MSGV2     = CX_FERROVIARIO_CHEGADA->MSGV2
                I_MSGV3     = CX_FERROVIARIO_CHEGADA->MSGV3
                I_MSGV4     = CX_FERROVIARIO_CHEGADA->MSGV4
                I_FIELDNAME = LS_MOD_CELLS-FIELDNAME
                I_ROW_ID    = LS_MOD_CELLS-ROW_ID.
        ENDTRY.


      WHEN 'DT_CHEGADA'.

        CALL METHOD RR_DATA_CHANGED->GET_CELL_VALUE
          EXPORTING
            I_ROW_ID    = LS_MOD_CELLS-ROW_ID
            I_FIELDNAME = LS_MOD_CELLS-FIELDNAME
          IMPORTING
            E_VALUE     = LC_DT_CHEGADA.

        IF LC_DT_CHEGADA IS INITIAL OR LC_DT_CHEGADA >= <FS_RETORNO>-DT_SAIDA.

          OBJETO->SET_DT_CHEGADA( I_DT_CHEGADA = LC_DT_CHEGADA ).

          LOOP AT IT_RETORNO_EDT ASSIGNING <FS_RETORNO_EDT>
            WHERE DCL       EQ <FS_RETORNO>-DCL
              AND SERIEDCL  EQ <FS_RETORNO>-SERIEDCL
              AND IDVAGAO   EQ <FS_RETORNO>-IDVAGAO
              AND CNPJFERRO EQ <FS_RETORNO>-CNPJFERRO.
            <FS_RETORNO_EDT>-DT_CHEGADA = LC_DT_CHEGADA.
            <FS_RETORNO_EDT>-LINE_COLOR = CS_LINE_COLOR_ALTERADO.
          ENDLOOP.

          CALL METHOD CTL_ALV->REFRESH_TABLE_DISPLAY
            EXPORTING
              IS_STABLE      = GS_ALV_REFRES_COND
              I_SOFT_REFRESH = ABAP_TRUE.

          CALL METHOD CL_GUI_CFW=>FLUSH.

        ELSE.
          CALL METHOD RR_DATA_CHANGED->ADD_PROTOCOL_ENTRY
            EXPORTING
              I_MSGID     = 'ZLES'
              I_MSGNO     = 123
              I_MSGTY     = 'E'
              I_FIELDNAME = LS_MOD_CELLS-FIELDNAME
              I_ROW_ID    = LS_MOD_CELLS-ROW_ID.
        ENDIF.

    ENDCASE.

  ENDLOOP.

ENDFORM.
