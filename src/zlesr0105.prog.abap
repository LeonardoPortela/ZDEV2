FORM ADD_RETORNO_ALV  USING P_NODE TYPE TV_NODEKEY.

  DATA: LC_DCL       TYPE ZDCL,
        LC_SERIEDCL	 TYPE ZSERIEDCL,
        LC_IDVAGAO   TYPE ZIDVAGAO,
        LC_CNPJFERRO TYPE ZCNPJFERRO.

