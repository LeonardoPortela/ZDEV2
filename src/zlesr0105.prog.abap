  READ TABLE ITEM_TABLE WITH KEY NODE_KEY = P_NODE ITEM_NAME = C_TREE-COLUMN9  INTO DATA(WA_ITEM_IDVAGAO).
  READ TABLE ITEM_TABLE WITH KEY NODE_KEY = P_NODE ITEM_NAME = C_TREE-COLUMN10 INTO DATA(WA_ITEM_SERIEDCL).
  READ TABLE ITEM_TABLE WITH KEY NODE_KEY = P_NODE ITEM_NAME = C_TREE-COLUMN11 INTO DATA(WA_ITEM_CNPJ).

  IF SY-SUBRC IS INITIAL.

    LC_DCL       = WA_ITEM_DCL-TEXT.
    LC_SERIEDCL  = WA_ITEM_SERIEDCL-TEXT.
    LC_IDVAGAO   = WA_ITEM_IDVAGAO-TEXT.
    LC_CNPJFERRO = WA_ITEM_CNPJ-TEXT.

    CHECK LC_DCL IS NOT INITIAL.
    CHECK LC_SERIEDCL IS NOT INITIAL.
    CHECK LC_IDVAGAO IS NOT INITIAL.
    CHECK LC_CNPJFERRO IS NOT INITIAL.
    "IdVagão

    READ TABLE IT_RETORNO_EDT
    WITH KEY DCL   = LC_DCL SERIEDCL = LC_SERIEDCL IDVAGAO = LC_IDVAGAO CNPJFERRO = LC_CNPJFERRO
    TRANSPORTING NO FIELDS.
    IF SY-SUBRC IS NOT INITIAL.
