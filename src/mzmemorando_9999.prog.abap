MODULE status_9998 OUTPUT.
  SET PF-STATUS 'PFIMPRESSAO'.
  IF radio1 IS INITIAL AND radio2 IS INITIAL.
    radio1 = 'X'.
    CLEAR: radio2.
  ENDIF.
ENDMODULE.                 " STATUS_9998  OUTPUT

*&---------------------------------------------------------------------*
*&      Module  USER_COMMAND_9998  INPUT
*&---------------------------------------------------------------------*
*       text
*----------------------------------------------------------------------*
MODULE user_command_9998 INPUT.

  CASE ok_code.
    WHEN 'RADIO1'.
      IF radio1 = 'X'.
        radio1 = 'X'.
        CLEAR: radio2.
      ELSE.
        radio2 = 'X'.
        CLEAR: radio1.
      ENDIF.
  ENDCASE.

ENDMODULE.                 " USER_COMMAND_9998  INPUT
