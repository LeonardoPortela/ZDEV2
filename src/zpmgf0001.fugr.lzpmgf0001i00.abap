MODULE GET_NAME.

  CLEAR ZPMT0043-NAME.
  IF ZPMT0043-SUPERIOR IS NOT INITIAL.
    SELECT SINGLE ENAME INTO ZPMT0043-NAME
      FROM PA0001
      WHERE PERNR = ZPMT0043-SUPERIOR.
    IF ZPMT0043-NAME IS INITIAL.
      CLEAR ZPMT0043-SUPERIOR.
    ENDIF.
  ENDIF.

ENDMODULE.

