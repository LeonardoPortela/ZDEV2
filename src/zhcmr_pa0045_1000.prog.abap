CLASS LCL_EVENT_RECEIVER IMPLEMENTATION.

  METHOD HANDLE_ONDROP.

    READ TABLE ITEM_TABLE
      WITH KEY NODE_KEY = CAST LCL_DRAGDROP_OBJ_TREE( E_DRAGDROPOBJ->OBJECT )->NODE ITEM_NAME = C_TREE-COLUMN1
          INTO DATA(WA_ITEM_TABLE).

    CHECK SY-SUBRC IS INITIAL.

    WA_AUSENC_EMPRESA-MOABW = WA_ITEM_TABLE-TEXT(2).
    WA_AUSENC_EMPRESA-AWART = WA_ITEM_TABLE-TEXT+3(4).

    READ TABLE IT_AUSENC_DISP
    WITH KEY
    MOABW = WA_AUSENC_EMPRESA-MOABW
    AWART = WA_AUSENC_EMPRESA-AWART
    INTO DATA(WA_AUSENC_DISP).

    CHECK SY-SUBRC IS INITIAL.

    """""""""""""""""""""""""""""""
    SELECT SINGLE * INTO @DATA(WA_T554T)
      FROM T554T
     WHERE SPRSL EQ @SY-LANGU
       AND AWART EQ @WA_AUSENC_DISP-AWART
       AND MOABW EQ @WA_AUSENC_DISP-MOABW.

    CHECK SY-SUBRC IS INITIAL.

    CLEAR: WA_AUSENC_EMPRESA.
    WA_AUSENC_EMPRESA-ATEXT = WA_T554T-ATEXT.
    WA_AUSENC_EMPRESA-AWART = WA_T554T-AWART.
    WA_AUSENC_EMPRESA-MOABW = WA_T554T-MOABW.
    APPEND WA_AUSENC_EMPRESA TO IT_AUSENC_EMPRESA.
    CK_ALTEROU = ABAP_TRUE.
    """""""""""""""""""""""""""""""

    DATA: GS_ALV_REFRES_COND TYPE LVC_S_STBL.

    PERFORM AUSENCIAS_DISPONIVEIS.
    PERFORM ATUALIZA_ALV_TRE.

    CHECK CL_GRID IS NOT INITIAL.

    GS_ALV_REFRES_COND-ROW = ABAP_TRUE.
    GS_ALV_REFRES_COND-COL = ABAP_TRUE.

    CALL METHOD CL_GRID->REFRESH_TABLE_DISPLAY
      EXPORTING
        IS_STABLE      = GS_ALV_REFRES_COND
        I_SOFT_REFRESH = ABAP_TRUE.

    CALL METHOD CL_GUI_CFW=>FLUSH.

    LEAVE TO SCREEN 1000.

  ENDMETHOD.                    "HANDLE_BUTTON_CLICK

ENDCLASS.

CLASS LCL_ALV_TOOLBAR IMPLEMENTATION.

  METHOD CONSTRUCTOR.
*   Create ALV toolbar manager instance
    CREATE OBJECT TOOLBARMANAGER
      EXPORTING
        IO_ALV_GRID = IO_ALV_GRID.

  ENDMETHOD.                    "constructor

  METHOD ON_TOOLBAR.

    DATA: TY_TOOLBAR   TYPE STB_BUTTON.

*    "Separador
    TY_TOOLBAR-BUTN_TYPE = 3.
    APPEND TY_TOOLBAR TO E_OBJECT->MT_TOOLBAR.
    CLEAR TY_TOOLBAR.

    "Marcar Todos os Documentos
    TY_TOOLBAR-ICON      = ICON_DELETE_ROW.
    TY_TOOLBAR-FUNCTION  = 'DEL'.
    TY_TOOLBAR-QUICKINFO = TEXT-007.
    TY_TOOLBAR-BUTN_TYPE = 0.
    APPEND TY_TOOLBAR TO E_OBJECT->MT_TOOLBAR.
    CLEAR TY_TOOLBAR.

    CALL METHOD TOOLBARMANAGER->REORGANIZE
      EXPORTING
        IO_ALV_TOOLBAR = E_OBJECT.

  ENDMETHOD.                    "on_toolbar

  METHOD HANDLE_USER_COMMAND.

    CLEAR: IT_AUSENC_EMPRESA_SEL, IT_AUSENC_EMPRESA_SEL[].

    CALL METHOD CL_GRID->GET_SELECTED_ROWS
      IMPORTING
        ET_INDEX_ROWS = DATA(IT_SELECTED).

    LOOP AT IT_SELECTED INTO DATA(WA_SELECTED).
      READ TABLE IT_AUSENC_EMPRESA INTO WA_AUSENC_EMPRESA INDEX WA_SELECTED-INDEX.
      APPEND WA_AUSENC_EMPRESA TO IT_AUSENC_EMPRESA_SEL.
    ENDLOOP.

    CASE E_UCOMM.
      WHEN 'DEL'.
        PERFORM DELETAR_AUSENCIA.
    ENDCASE.

  ENDMETHOD.

ENDCLASS.

