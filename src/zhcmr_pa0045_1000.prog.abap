MODULE USER_COMMAND_1000_EXIT INPUT.

  PERFORM VERIFICAR_DESEJA_SALVAR.

  IF CK_ALTEROU EQ ABAP_FALSE.
    CLEAR: IT_AUSENC_EMPRESA[], IT_AUSENC_DISP[].

    CLEAR: EVENT_RECEIVER,
           TOOLBARMANAGER,
           OBG_TOOLBAR,
           TREE_EVENT_RECEIVER,
           DRAGDROP_ALV,
           DRAGDROP_TREE.

    IF CL_GRID IS NOT INITIAL.
      CL_GRID->FREE( ).
    ENDIF.
    CLEAR: CL_GRID.

    IF TREE IS NOT INITIAL.
      TREE->FREE( ).
    ENDIF.
    CLEAR: TREE.

    IF CONTAINER_ALV IS NOT INITIAL.
      CONTAINER_ALV->FREE( ).
    ENDIF.
    CLEAR: CONTAINER_ALV.

    IF CONTAINER_TRE IS NOT INITIAL.
      CONTAINER_TRE->FREE( ).
    ENDIF.
    CLEAR: CONTAINER_TRE.

    IF SPLITTER IS NOT INITIAL.
      SPLITTER->FREE( ).
    ENDIF.
    CLEAR: SPLITTER.

    IF CONTAINER IS NOT INITIAL.
      CONTAINER->FREE( ).
    ENDIF.
    CLEAR: CONTAINER.

    LEAVE TO SCREEN 0.
  ENDIF.

ENDMODULE.

