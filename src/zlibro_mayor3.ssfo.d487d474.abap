DATA: WL_LOW(10),
      WL_HIGH(10).

IF BUDAT_LOW IS NOT INITIAL.
  IF BUDAT_HIGH IS NOT INITIAL.
    CONCATENATE BUDAT_LOW+6(2) '/' BUDAT_LOW+4(2) '/'
                BUDAT_LOW(4) INTO WL_LOW.

    CONCATENATE BUDAT_HIGH+6(2) '/' BUDAT_HIGH+4(2) '/'
                BUDAT_HIGH(4) INTO WL_HIGH.

     CONCATENATE WL_LOW '-' WL_HIGH INTO
                 WG_PERIODO SEPARATED BY SPACE.
  ELSE.
    CONCATENATE BUDAT_LOW+6(2) '/' BUDAT_LOW+4(2) '/'
                BUDAT_LOW(4) INTO WG_PERIODO.
  ENDIF.
ENDIF.

IF BUDAT_HIGH IS NOT INITIAL.
  WG_DATA = BUDAT_HIGH.
ELSE.
  WG_DATA = BUDAT_LOW.
ENDIF.





























