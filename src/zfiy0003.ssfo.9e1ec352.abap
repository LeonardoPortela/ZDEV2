TABLES: T001.

CLEAR:  V_INICIO_ACTV,
        V_PAIS,
        V_ADRNR,
        V_PROV.


SELECT SINGLE *
  FROM T001
  WHERE BUKRS = J_1AI02-BUKRS.


 V_ADRNR = GS_SADR-ADRNR.

* Pais
SELECT SINGLE LANDX50
FROM T005T
INTO V_PAIS
WHERE LAND1 EQ GS_SADR-LAND1
  AND SPRAS EQ 'S'.

* Inicio de actividad
SELECT SINGLE PAVAL
FROM T001Z
INTO V_INICIO_ACTV
WHERE BUKRS EQ J_1AI02-BUKRS
 AND  PARTY EQ 'J1AFDT'.

* Provincia
SELECT SINGLE BEZEI
FROM T005U
INTO V_PROV
WHERE BLAND EQ GS_SADR-REGIO
  AND SPRAS EQ 'S'
  AND LAND1 EQ GS_SADR-LAND1.

*CUIT
 SELECT SINGLE PAVAL
   FROM T001Z
   INTO V_CUIT
   WHERE   BUKRS = T001-BUKRS
   AND   PARTY = 'J1AIDN'.

   CONCATENATE V_CUIT+0(2) '-' V_CUIT+2(8)'-'V_CUIT+10(1) INTO V_CUIT.













