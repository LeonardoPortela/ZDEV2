FUNCTION ZNFE_SEL_MOTIVO_REJEICAO.
*"----------------------------------------------------------------------
*"*"Interface local:
*"  EXPORTING
*"     REFERENCE(E_MOTIVO) TYPE  ZDE_MOTIVO_REJEICAO_FISCAL
*"----------------------------------------------------------------------

  CALL FUNCTION 'GET_DOMAIN_VALUES'
    EXPORTING
      DOMNAME    = 'ZDM_MOTIVO_REJEICAO_FISCAL'
    TABLES
      VALUES_TAB = IT_DD07V.

  CK_SELECIONOU_APROVACAO = ABAP_FALSE.

  CALL SCREEN 9002 STARTING AT 5 5.

  IF CK_SELECIONOU_APROVACAO EQ ABAP_TRUE.
    MOVE WA_DD07V-DOMVALUE_L TO E_MOTIVO.
  ENDIF.

ENDFUNCTION.
