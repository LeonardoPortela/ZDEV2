       EXPORTING
         IS_STABLE = WA_STABLE.
  ENDIF.

  CALL METHOD OBJ_ALV_0120->SET_READY_FOR_INPUT
    EXPORTING
      I_READY_FOR_INPUT = 1.

ENDMODULE.
