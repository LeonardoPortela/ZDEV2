FUNCTION ZENQUEUE_CARGA.
*"----------------------------------------------------------------------
*"*"Interface local:
*"  IMPORTING
*"     REFERENCE(MODE) TYPE  ENQMODE DEFAULT 'X'
*"     REFERENCE(MANDT) TYPE  MANDT DEFAULT SY-MANDT
*"     REFERENCE(ID_CARGA) TYPE  ZDE_ID_CARGA
*"     REFERENCE(_SCOPE) DEFAULT '2'
*"     REFERENCE(_WAIT) DEFAULT SPACE
*"     REFERENCE(_COLLECT) TYPE  DDENQCOLL DEFAULT SPACE
*"  EXCEPTIONS
*"      FOREIGN_LOCK
*"      SYSTEM_FAILURE
*"----------------------------------------------------------------------

  DATA: __SEQTA_TAB TYPE SEQTA OCCURS 01 WITH HEADER LINE,
        __SCOPE     TYPE DDENQSCOPE,
        __WAIT      TYPE DDENQWAIT.

  __WAIT = _WAIT.
  __SCOPE = _SCOPE.

  DATA: BEGIN OF %A_ZSDT0001CG,
          MANDT    TYPE SY-MANDT,
          ID_CARGA TYPE ZDE_ID_CARGA,
        END OF %A_ZSDT0001CG.

  CALL 'C_ENQ_WILDCARD' ID 'HEX0' FIELD %A_ZSDT0001CG.

  MOVE: ID_CARGA TO %A_ZSDT0001CG-ID_CARGA.

  IF NOT MANDT IS INITIAL.
    MOVE MANDT TO: %A_ZSDT0001CG-MANDT.
  ENDIF.

* Preencher tab.bloqueio:
  __SEQTA_TAB-GNAME = 'ZSDT0001CG'.
  __SEQTA_TAB-GMODE = MODE.
  __SEQTA_TAB-GARG = %A_ZSDT0001CG.
  APPEND __SEQTA_TAB.

* Fixar bloqueio:
  PERFORM SEND_ENQUEUE(SAPLSENA)
   TABLES __SEQTA_TAB
    USING '1' __SCOPE __WAIT ' ' 'EZSDT0001CG' _COLLECT.

ENDFUNCTION.
