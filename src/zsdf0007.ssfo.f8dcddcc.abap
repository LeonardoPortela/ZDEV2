DATA: RUA    TYPE KNA1-STRAS,
      CIDADE TYPE KNA1-MCOD3,
      UF     TYPE KNA1-REGIO.

DATA: WERKS_ TYPE KUNNR.
WERKS_ = |{ WA_WERKS-WERKS ALPHA = IN }|.

SELECT SINGLE STRAS MCOD3 REGIO
  FROM KNA1
  INTO (RUA, CIDADE, UF)
  WHERE KUNNR EQ WERKS_.

ENTREGA1 = | { RUA }, { CIDADE }, { UF } |.

CHECK WA_VBKD-INCO1 NE 'FOB'.

ENTREGA1 = |{ WA_INFO_C-STRAS }, { WA_INFO_C-ORT02 }, { WA_INFO_C-ORT01 }, { WA_INFO_C-REGIO }|.







