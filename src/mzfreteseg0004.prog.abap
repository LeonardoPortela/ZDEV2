MODULE status_0004 OUTPUT.

  CLEAR: gf_cancel.

  SET PF-STATUS 'POPUP'.

ENDMODULE.                 " STATUS_0004  OUTPUT

*&---------------------------------------------------------------------*
*&      Module  USER_COMMAND_0004  INPUT
*&---------------------------------------------------------------------*
*       text
*----------------------------------------------------------------------*
MODULE user_command_0004 INPUT.

  CASE ok_code.
    WHEN 'CAN_NO'.
      CLEAR gf_cancel.
    WHEN 'CAN_YES'.
      gf_cancel = c_x.
    WHEN 'QUIT'.
      CLEAR gf_cancel.
  ENDCASE.

  CLEAR ok_code.
  LEAVE TO SCREEN 0.

ENDMODULE.                 " USER_COMMAND_0004  INPUT
